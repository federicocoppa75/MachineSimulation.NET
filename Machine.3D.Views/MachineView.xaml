                    Thickness="1"
                    IsSelected="{Binding IsSelected, Mode=TwoWay}"
                    IsRendering="{Binding IsVisible}"
                    PostEffects="{Binding PostEffects}">
                    <hx:LineGeometryModel3D.Geometry>
