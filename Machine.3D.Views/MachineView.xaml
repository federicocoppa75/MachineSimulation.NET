        <converters3D:PanelToGemetryConverter x:Key="panelToGeometryConverter"/>
        <converters3D:AxIdToLabelCharConverter x:Key="axIdToLabelCharConverter"/>
        <converters3D:InsertedToGeometryConverter x:Key="insertedToGeometryConverter"/>
