                                        <Binding Path="IsCorrupted"/>
                                    </MultiBinding>
                                </hx:MeshGeometryModel3D.RenderWireframe>-->
                            </hx:MeshGeometryModel3D>
                        </DataTemplate>
                    </hx:ItemsModel3D.ItemTemplate>
                </hx:ItemsModel3D>
            </hx:CompositeModel3D>
        </DataTemplate>
